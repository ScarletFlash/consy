{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalDependencies": [
    "!./node_modules/",
    "!./**/.turbo/",
    "!.turbo/**/*",
    "./configs/**/*",
    ".npmrc",
    "pnpm-*.yaml",
    "package.json"
  ],
  "tasks": {
    "compiler__run": {
      "cache": true,
      "persistent": false,
      "inputs": ["./src/**/*.ts", "./tsconfig.json"],
      "outputs": ["./tsc-out"],
      "outputLogs": "errors-only"
    },
    "compiler__check": {
      "cache": true,
      "persistent": false,
      "inputs": ["./src/**/*.ts", "./tsconfig.json"],
      "outputLogs": "errors-only"
    },
    "formatter__check": {
      "cache": true,
      "persistent": false,
      "inputs": ["./**/*.{ts,yaml,yml,json,md}"],
      "outputs": [],
      "dependsOn": ["//#formatter__check:root"],
      "outputLogs": "errors-only"
    },
    "//#formatter__check:root": {
      "cache": true,
      "persistent": false,
      "inputs": ["./*.*"],
      "outputs": [],
      "dependsOn": [],
      "outputLogs": "errors-only"
    },
    "formatter__fix": {
      "cache": true,
      "persistent": false,
      "inputs": ["./**/*.{ts,yaml,yml,json,md}"],
      "outputs": ["./**/*.{ts,yaml,yml,json,md}"],
      "dependsOn": ["//#formatter__fix:root"],
      "outputLogs": "errors-only"
    },
    "//#formatter__fix:root": {
      "cache": true,
      "persistent": false,
      "inputs": ["./*.*", "!turbo.json"],
      "outputs": ["./*.*", "!turbo.json"],
      "dependsOn": [],
      "outputLogs": "errors-only"
    }
  }
}
