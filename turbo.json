{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalDependencies": [
    "!./node_modules/",
    "!./**/.turbo/",
    "!.turbo/**/*",
    "./configs/**/*",
    ".npmrc",
    "pnpm-*.yaml",
    "package.json"
  ],
  "tasks": {
    "compiler__run": {
      "cache": true,
      "persistent": false,
      "inputs": ["./src/**/*.ts", "./tsconfig.json"],
      "outputs": ["./tsc-out"],
      "outputLogs": "errors-only"
    },
    "compiler__check": {
      "cache": true,
      "persistent": false,
      "inputs": ["./src/**/*.ts", "./tsconfig.json"],
      "outputLogs": "errors-only"
    }
  }
}
